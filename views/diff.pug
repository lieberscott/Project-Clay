html(lang="en")
  head
    title Welcome to Glitch!
    meta(name="description" content="A cool thing made with Glitch")
    link#favicon(rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/style.css")
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
    script(src="/client.js" defer)
    
    
  body
    h1 Changes
    h4= commitMetadata.author + " " + commitMetadata.date + " " + commitMetadata.message
    div#differences
      each val, ind in diffArr
        h5= "SECTION " + val.file
        each item, index in val.lines
          div.line= item
        br
        
    h1 Full Legislation at this point
    div
      each val, ind in fileTextArr
        h5= "SECTION " + val.file
        div !{val.text.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/\n/g, '<br/>')}
          // convert /n to <br/> ~~~7
        br

      
    button#nodegit(type="submit") /nodegit
    a(href="/history")
      button /history
    a(href="/")
      button home