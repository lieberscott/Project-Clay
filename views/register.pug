html(lang="en")
  head
    title Welcome to Glitch!
    meta(name="description" content="A cool thing made with Glitch")
    link#favicon(rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/registerstyle.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous")
    
  body
    div.register-page
      != messages('messages', local)
      if errors
        for error, i in errors
          div(class="alert alert-danger") #{error.msg}
      h3 Register for Project Clay
      div.form
        form.register-form(method="POST" action="/register")
          input(name="email" type="text" placeholder="email address")
          input(name="pass" type="password" placeholder="password")
          input(name="pass2" type="password" placeholder="confirm password")
          input(name="name" type="text" placeholder="display name")
          select.custom-select#party(name="party")
            option(selected) Party Affiliation
            option(value="Democratic") Democratic
            option(value="Republican") Republican
            option(value="Libertarian") Libertarian
            option(value="Green") Green
          button(type="submit") Create
          p.message Already registered? 
            a(href="/login") Log In

    a(href="/")
      button /home